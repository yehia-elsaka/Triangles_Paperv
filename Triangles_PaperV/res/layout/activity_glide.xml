<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >


            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/dim_10"
	            android:layout_marginBottom="@dimen/dim_10"
	            android:layout_marginLeft="@dimen/dim_10"
	            android:layout_marginRight="@dimen/dim_10"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >

            
	            <ImageView
	                android:id="@+id/user_image"
	                android:layout_width="80dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/dim_10"
		            android:adjustViewBounds="true"
		            android:scaleType="fitCenter"
	                android:src="@drawable/avatar_2" />
		            	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="@dimen/dim_5"
	                android:tag="bold"
	                android:text="Glide Your Story .."
	                android:textColor="@color/dark_blue"
	                android:textSize="@dimen/tex_size_xxlarge"
	                android:textStyle="bold" />

			</LinearLayout>

         
            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/dim_10"
	            android:layout_marginBottom="@dimen/dim_10"
	            android:layout_marginLeft="@dimen/dim_20"
	            android:layout_marginRight="@dimen/dim_20"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText1"
                    style="@style/EditText_Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Title"
                    android:inputType="textPersonName" >
                    <requestFocus />
                </EditText>
                
                
                
                <EditText
                    android:id="@+id/editText2"
                    style="@style/EditText_Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:lines="3"
                    android:layout_marginTop="3dp"
                    android:hint="What's yout story ?"
                    android:inputType="textMultiLine" >
                </EditText>
                
                
                <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_marginTop="3dp"
	            android:orientation="horizontal" >
                    
	                <EditText
	                    android:id="@+id/editText6"
	                    style="@style/EditText_Blue"
	                    android:layout_width="match_parent"
	                    android:layout_height="fill_parent"
	                    android:ems="10"
	                    android:layout_weight="0.90"
	                    android:hint="Category ?"
	                    android:inputType="textPersonName" >
	                </EditText>
                
	                <ImageButton
			            android:id="@+id/add_category"
			            android:layout_width="@dimen/width"
			            android:layout_height="fill_parent"
			            android:background="@drawable/ui_button_blue"
			            android:contentDescription="@string/desc"
			            android:src="@drawable/ico_plus" />
	                
                </LinearLayout>
	            
            </LinearLayout>

            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/dim_5"
	            android:layout_marginLeft="@dimen/dim_10"
	            android:layout_marginRight="@dimen/dim_10"
	            android:layout_marginBottom="@dimen/dim_5"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >

            
	            <Button
			        android:id="@+id/add_story_photo"
			        style="@style/Button_Blue"
			        android:layout_width="100dp"
			        android:layout_height="35dp"
			        android:text="Add Photo"
			        android:textColor="#ffffff"
			        android:textSize="17sp"
			        android:layout_margin="5dp"
			        android:textStyle="bold" />
		            	            
	            <Button
			        android:id="@+id/add_video"
			        style="@style/Button_Blue"
			        android:layout_width="100dp"
			        android:layout_height="35dp"
			        android:text="Add Video"
			        android:textColor="#ffffff"
			        android:textSize="17sp"
			        android:layout_margin="5dp"
			        android:textStyle="bold" />

			</LinearLayout>
			
            
		
	        
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="-3dp"
	            android:layout_marginBottom="-3dp"
	            android:layout_marginLeft="@dimen/dim_10"
	            android:layout_marginRight="@dimen/dim_10"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="vertical" >

            
	           
	            
	            
	            <ImageView
	            android:id="@+id/glide_image"
	            android:layout_width="fill_parent"
	            android:layout_height="180dp"
	            android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/desc"
	            android:scaleType="fitCenter"
	            android:src="@drawable/avatar_3" />
	        
	            <EditText
                   android:id="@+id/video_url"
                   style="@style/EditText_Blue"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dim_10"
	               android:layout_marginRight="@dimen/dim_10"
                   android:ems="10"
                   android:hint="Enter Your Video Link ... "
                   android:inputType="textPersonName" >
               </EditText>
	           

			</LinearLayout>
	        
	        <EditText
                   android:id="@+id/editText7"
                   style="@style/EditText_Blue"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dim_20"
	               android:layout_marginRight="@dimen/dim_20"
	               android:layout_marginTop="@dimen/dim_10"
                   android:layout_marginBottom="@dimen/dim_10"
                   android:ems="10"
                   android:hint="caption ..."
                   android:inputType="textPersonName" >
               </EditText>

        
            
            <Button
			        android:id="@+id/glide_photo"
			        style="@style/Button_Blue"
			        android:layout_width="100dp"
			        android:layout_height="35dp"
			        android:text="Glide it!"
			        android:textColor="#ffffff"
			        android:textSize="17sp"
			        android:layout_margin="10dp"
			        android:textStyle="bold" />
	            
        </LinearLayout>
        
        
    </ScrollView>

    
</LinearLayout>