<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="15dp" >

        <TextView
            android:id="@+id/comment_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comment_owner_layout"
            android:layout_toRightOf="@+id/comment_owner_layout"
            android:text="Helal Ismail"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/comment_owner_layout"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded" >

            <TextView
                android:id="@+id/comment_owner"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/helal" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_owner_name"
            android:layout_toRightOf="@+id/comment_owner_layout"
            android:padding="10dp"
            android:text="this is a comment!"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    

</RelativeLayout>