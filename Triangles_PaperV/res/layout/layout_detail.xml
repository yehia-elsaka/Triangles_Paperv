<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_35"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sub_tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_button_purple"
            android:contentDescription="@string/desc"
            android:src="@drawable/ico_left" />

        <ImageButton
            android:id="@+id/reglide_story"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_button_blue"
            android:contentDescription="@string/desc"
            android:src="@drawable/ico_glide_2" />

        <ImageButton
            android:id="@+id/like_story"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_button_red"
            android:contentDescription="@string/desc"
            android:src="@drawable/ico_heart" />
    </LinearLayout>
    
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            
       <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
            
            
            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="@dimen/dim_10"
            	android:layout_marginRight="@dimen/dim_10"
            	android:layout_marginBottom="@dimen/dim_5"
            	android:layout_marginTop="@dimen/dim_10"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/brave"
                android:contentDescription="@string/desc" />
            
            
             <ImageView
			    android:id="@+id/myvideoview"
			    android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dim_10"
            	android:layout_marginRight="@dimen/dim_10"
            	android:layout_marginBottom="@dimen/dim_5"
            	android:layout_marginTop="@dimen/dim_10" 
            	 android:layout_weight="1"
            	 android:layout_gravity="center"
            	android:src="@drawable/play_button"
                android:contentDescription="@string/desc"/>
            
          
		      <LinearLayout
		        android:id="@+id/sub_tab"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginBottom="15dp"
		        android:layout_marginTop="10dp"
		        android:background="@color/transparent"
		        android:gravity="center"
		        android:orientation="horizontal" >
		
			        <LinearLayout
			            android:id="@+id/previous_image"
			          android:layout_width="fill_parent"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"
			          android:gravity="left|center_vertical"
			          android:orientation="horizontal" 
			          android:background="@color/transparent">
			          
			             
			             
			             <ImageView
				           android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:adjustViewBounds="true"
				           android:contentDescription="@string/desc"
				           android:src="@drawable/ico_left" />
			             
			          
			         </LinearLayout>
			         
			        
			        
			        <LinearLayout
			            android:id="@+id/dummy"
			          android:layout_width="fill_parent"
			          android:layout_height="fill_parent"
			          android:layout_weight="1"
			          android:gravity="left|center_vertical"
			          android:orientation="horizontal" 
			          android:background="@color/transparent">
			        </LinearLayout>
		
		        <LinearLayout
		            android:id="@+id/next_image"
		          android:layout_width="fill_parent"
		          android:layout_height="fill_parent"
		          android:layout_marginLeft="5dp"
		          android:layout_weight="1"
		          android:gravity="right|center_vertical"
		          android:orientation="horizontal" 
		          android:background="@color/transparent">
		          
		          
		             <ImageView
		           
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:adjustViewBounds="true"
		           android:contentDescription="@string/desc"
		           android:src="@drawable/ico_right" />
		          
		         </LinearLayout>
		         
		        
		    </LinearLayout>
		    
		      
		     
		    
		      
		       
		      
		    
		    </FrameLayout>
            
            
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            
            <ImageView
                android:id="@+id/user_image_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_marginRight="10dp"
                android:src="@drawable/avatar_2" />
            
            
            
            
            <LinearLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="vertical" >
	            	            
	            <TextView
	                android:id="@+id/author_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/dim_5"
	                android:tag="bold"
	                android:text="User Name .."
	                android:textColor="@color/white"
	                android:textSize="@dimen/tex_size_xlarge"
	                android:textStyle="bold" />
	            
	            
	            <TextView
		            android:id="@+id/story_name_2"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/dim_5"
		            android:ellipsize="end"
		            android:lines="1"
		            android:text="Brave"
		            android:tag="bold"
		            android:textColor="@color/gray_167"
		            android:textSize="@dimen/tex_size_large"
		            android:textStyle="bold" />
            
            </LinearLayout>
            
            
            <Button
		        android:id="@+id/follow_user"
		        style="@style/Button_Red"
		        android:layout_width="70dp"
		        android:layout_height="35dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:text="Follow"
		        android:textColor="#ffffff"
		        android:textSize="17sp"
		        android:textStyle="bold" />
            
            
        </LinearLayout>

         
            
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
	            android:id="@+id/image_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="@dimen/dim_10"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/desc"
	            android:scaleType="fitCenter"
	            android:src="@drawable/ico_heart" />
	            
            <TextView
                android:id="@+id/likes_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xlarge"
                android:textStyle="bold" 
                android:layout_marginRight="23dp"/>
            
            
            <ImageView
	            android:id="@+id/image_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="@dimen/dim_10"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/desc"
	            android:scaleType="fitCenter"
	            android:src="@drawable/ico_glide_2" />
	            
            <TextView
                android:id="@+id/reglides_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xlarge"
                android:textStyle="bold" 
                android:layout_marginRight="23dp"/>
            
            
            <ImageView
	            android:id="@+id/image_3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="@dimen/dim_10"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/desc"
	            android:scaleType="fitCenter"
	            android:src="@drawable/ico_comment" />
	            
            <TextView
                android:id="@+id/comments_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xlarge"
                android:textStyle="bold" 
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        
            
            
            
           <LinearLayout
                android:id="@+id/comments_list"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="vertical" >
            	            
            
           </LinearLayout> 
            
            
            
	            
        </LinearLayout>
        
        
    </ScrollView>
    
    

    
</LinearLayout>