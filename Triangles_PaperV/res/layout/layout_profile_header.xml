<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" 
    android:layout_marginBottom="-5dp" >

    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            
            <ImageView
                android:id="@+id/profile_user_image"
                android:layout_width="80dp"
	            android:layout_height="90dp"
	            android:layout_marginTop="@dimen/dim_5"
	            android:layout_marginRight="@dimen/dim_5"
	            android:layout_marginLeft="@dimen/dim_5"
	            android:adjustViewBounds="true"
	            android:scaleType="fitCenter"
	            android:layout_gravity="left"
                android:src="@drawable/avatar_2" />
            
            
            <LinearLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="vertical" >
            
            
		            <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:gravity="center_vertical"
			            android:orientation="horizontal" >
			            	            
			            <LinearLayout
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent"
				            android:layout_weight="1"
				            android:gravity="center"
				            android:background="@color/gray_215"
				            android:orientation="vertical" >
				            
			                <TextView
				            android:id="@+id/number_of_stories"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="0"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			                
			                <TextView
				            android:id="@+id/text2"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="Stories"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			            
			            </LinearLayout>
			            
			            
			            <LinearLayout
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent"
				            android:layout_weight="1"
				            android:gravity="center"
				            android:background="@color/yellow"
				            android:orientation="vertical" >
				            
			                <TextView
				            android:id="@+id/number_of_followers"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="0"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			                
			                <TextView
				            android:id="@+id/text4"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="Followers"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			            
			            </LinearLayout>
			            
			            <LinearLayout
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent"
				            android:layout_weight="1"
				            android:gravity="center"
				            android:background="@color/red"
				            android:orientation="vertical" >
				            
			                <TextView
				            android:id="@+id/number_of_following"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="0"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			                
			                <TextView
				            android:id="@+id/text6"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:ellipsize="end"
				            android:lines="1"
				            android:text="Following"
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_small"
				            android:textStyle="bold" />
			            
			            </LinearLayout>
		            
		            </LinearLayout>
		            
		            
		            <LinearLayout
		                android:id = "@+id/edit_button"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:gravity="center"
			            android:orientation="horizontal" 
			            android:background="@color/blue">
			            
		                <TextView
				            android:id="@+id/text7"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_margin="@dimen/dim_5"
				            android:ellipsize="end"
				            android:lines="1"
				            android:layout_weight="0.8"
				            android:text="Edit Your Profile .. "
				            android:tag="bold"
				            android:gravity="center"
				            android:textColor="@color/white"
				            android:textSize="@dimen/tex_size_large"
				            android:textStyle="bold" />
		                
		                <ImageView
				            android:id="@+id/image_1"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_margin="@dimen/dim_10"
				            android:adjustViewBounds="true"
				            android:contentDescription="@string/desc"
				            android:gravity="right"
				            android:src="@drawable/ico_right" />
			            
		            </LinearLayout>
            
            
        </LinearLayout>

        
    </LinearLayout>
			
        
   
</LinearLayout>