<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sub_tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cancel"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="horizontal" 
          android:background="@color/gray_167">
          
             
             
             <ImageView
           
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/dim_5"
           android:adjustViewBounds="true"
           android:contentDescription="@string/desc"
           android:gravity="left"
           android:src="@drawable/ico_left" />
             
             
             <TextView
           android:id="@+id/text7"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ellipsize="end"
           android:lines="1"
           android:layout_weight="0.8"
           android:text="Cancel Editing "
           android:tag="bold"
           android:gravity="center"
           android:textColor="@color/white"
           android:textSize="@dimen/tex_size_large"
           android:textStyle="bold" />
          
         </LinearLayout>

        <LinearLayout
            android:id="@+id/done"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="horizontal" 
          android:background="@color/red">
          
             
             
             <ImageView
           
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/dim_5"
           android:adjustViewBounds="true"
           android:contentDescription="@string/desc"
           android:gravity="left"
           android:src="@drawable/ico_like" />
             
             
             <TextView
           android:id="@+id/text7"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ellipsize="end"
           android:lines="1"
           android:layout_weight="0.8"
           android:text="Done Editing "
           android:tag="bold"
           android:gravity="center"
           android:textColor="@color/white"
           android:textSize="@dimen/tex_size_large"
           android:textStyle="bold" />
          
         </LinearLayout>
    </LinearLayout>
    
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            
            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/dim_20"
	            android:layout_marginBottom="@dimen/dim_10"
	            android:layout_marginLeft="@dimen/dim_10"
	            android:layout_marginRight="@dimen/dim_10"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >

            
	            <ImageView
	                android:id="@+id/edit_user_image"
	                android:layout_width="80dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/dim_10"
		            android:adjustViewBounds="true"
		            android:scaleType="fitCenter"
	                android:src="@drawable/avatar_2" />
		            	            
	            <Button
			        android:id="@+id/change_photo"
			        style="@style/Button_Blue"
			        android:layout_width="170dp"
			        android:layout_height="35dp"
			        android:text="Change Your Photo"
			        android:textColor="#ffffff"
			        android:textSize="17sp"
			        android:layout_margin="10dp"
			        android:textStyle="bold" />

			</LinearLayout>
        	<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:layout_marginTop="@dimen/dim_10"
	            android:orientation="vertical" >
	            
        	    
        	    
			
			    <EditText
			        android:id="@+id/user_name"
			        style="@style/EditText_Blue"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_marginTop="10dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginLeft="20dp"
			        android:ems="10"
			        android:hint="UserName"
			        android:inputType="textPersonName" />
			
			    
			    <EditText
			        android:id="@+id/email_field"
			        style="@style/EditText_Blue"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginLeft="20dp"
			        android:ems="10"
			        android:hint="Email"
			        android:inputType="textEmailAddress" />
			    
			    
	        </LinearLayout>
	            
        </LinearLayout>
        
        
    </ScrollView>

    
</LinearLayout>